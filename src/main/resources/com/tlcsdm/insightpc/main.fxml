<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tlcsdm.insightpc.controller.MainController"
            prefWidth="1000" prefHeight="700">

    <top>
        <MenuBar>
            <Menu text="%menu.file">
                <MenuItem text="%menu.settings" onAction="#openSettings"/>
                <SeparatorMenuItem/>
                <MenuItem text="%menu.exit" onAction="#exitApplication"/>
            </Menu>
            <Menu text="%menu.help">
                <MenuItem text="%menu.about" onAction="#showAbout"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE"/>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5 10 5 10; -fx-background-color: -color-bg-subtle;">
            <Label fx:id="statusLabel" text="%status.ready"/>
        </HBox>
    </bottom>

</BorderPane>
